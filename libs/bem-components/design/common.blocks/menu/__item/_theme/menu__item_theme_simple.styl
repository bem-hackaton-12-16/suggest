.menu__item_theme_simple
{
    padding: 4px 10px;

    white-space: nowrap;
    text-overflow: ellipsis;

    .menu__group &
    {
        padding-left: 25px;
    }

    &.menu__item_disabled
    {
        opacity: 0.3;
    }

    .link_disabled
    {
        cursor: text;
    }

    &.menu__item_checked
    {
        font-weight: bold;

        background: #fff7db;
    }

    &.menu__item_hovered
    {
        cursor: pointer;

        background: #ffc7c7;
    }
}
